  <version>1.0</version>
  <description>A simple Java util's library.</description>
  <url>https://github.com/zollty-org/zollty-util-web</url>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
